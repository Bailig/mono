{
  "packages": ["packages/*"],
  "version": "0.0.0",
  "npmClient": "yarn",
  "npmClientArgs": ["--production=false"],
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        ".storybook",
        ".vscode",
        "cypress",
        "e2e",
        "*.spec.*",
        "scripts",
        "**/data",
        "*tmp*",
        "*temp*",
        "*temporary*"
      ]
    }
  }
}
